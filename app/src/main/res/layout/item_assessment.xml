<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

        <ImageView
            android:id="@+id/assessment_item_type_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#171D71"
            android:layout_marginHorizontal="6dp"
            app:srcCompat="@drawable/assessment_written" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/assessment_item_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:paddingHorizontal="2dp"
            android:textSize="18sp"
            android:text="Assessment Title" />

    <TextView
        style="@style/recyclerTextview"
        android:id="@+id/assessment_item_note_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="@string/sample_note_assessment_text" />

    </LinearLayout>
</LinearLayout>